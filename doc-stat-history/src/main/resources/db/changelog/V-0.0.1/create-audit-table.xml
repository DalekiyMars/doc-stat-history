<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!-- Создание последовательности для аудита, если её нет -->
    <changeSet id="create-audit-seq" author="Eugene">
        <preConditions onFail="CONTINUE">
            <not>
                <sequenceExists sequenceName="audit_id_seq" schemaName="logging"/>
            </not>
        </preConditions>
        <createSequence sequenceName="audit_id_seq"
                        schemaName="logging"
                        startValue="1"
                        incrementBy="50"/>
    </changeSet>

    <!-- Создание таблицы audit -->
    <changeSet id="create-audit-table" author="Eugene">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="audit" schemaName="logging"/>
            </not>
        </preConditions>
        <createTable tableName="audit" schemaName="logging">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('logging.audit_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="document_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="action_author" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="action_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="action_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="document_id"
                                 baseTableName="audit"
                                 baseTableSchemaName="logging"
                                 constraintName="fk_audit_document"
                                 referencedColumnNames="id"
                                 referencedTableName="documents"
                                 referencedTableSchemaName="entity_tables"/>
    </changeSet>
</databaseChangeLog>